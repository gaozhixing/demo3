/* pages/motion/motion.wxss*/
.swiper-tab {
  position: fixed;
  left: 0px;
  bottom: 0px;
  width: 375px;
  height: 68px;
  background-color: rgba(255, 255, 255, 1);
  z-index: 99;
}
.swiper-tab-list {
  font-size: 13px;
  display: inline-block;
  width: 50%;
  height: 68px;
  color: #777;
  text-align: center;

}

.swiper-tab-list cover-image{
  height: 40px;
  width: 40px;
  display: block;
  margin: auto;

}
.on{
  color: rgb(18, 150, 219)
}
.swiper-box {
  float: left;
  display: block;
  height: 900px;
  width: 100%;
}
.noshow{
  display: none;
}
.maxheight{
  height: 1400px
}
.swiper-box view {
  text-align: center;
}

.tabView1 {
  width: 100%;
}
.tabView1 image{
  width: 100%;
  height: 150px;
}
.scan{
  width: 63px;
  height: 63px;
  position: fixed;
  bottom: 35px;
  left: 150px;
  z-index: 99;
  border-radius: 35px;
}
.scan cover-image{
  width: 120%;
  height: 120%;
}

/* 设置数据页 */

.tabView2{
  background: rgb(245, 241, 241);  
}
.tabView2 .bodyDisplay{
  height: 300px;
  width: 100%;
  background: #fff;
  border-radius:0px 0px 15px 15px;
}
.tabView2 .bodyDisplay image{
  width:90%;
  height: 270px;
  display: inline-block;
}
.tabView2 .firstCard{
  position: absolute;
  left: 18px;
  top: 285px;
  width: 336px;
  height: 209px;
  line-height: 20px;
  border-radius: 22px;
  text-align: center;
  background: #fff;
  box-shadow: 5px 8px 3px -1px rgba(170, 170, 170, 1);
  border: 1px solid rgba(187, 187, 187, 1);
}
.tabView2 text{
  display: block;
  font-size: 20px;
  width: 40%;
  float: left;
  margin-left: 20px;
  margin-top: 20px;
  text-align: left;
}
.firstCard text:nth-of-type(2){
  float: right;
  text-align: right;
  margin-right: 20px;
}
.firstCard text:nth-of-type(2)::after{
  clear: both;

}
