/**index.wxss**/
/* 从服务器获取 */
.container{
  width: 100%;
  height: 600px;  
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:60px;
}

/* 设置用户头像 */
.userinfo-avatar {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  border: 5px solid rgba(44,150,243,0.8);
}
/* 设置神秘人 */
.mystery{
  width: 64px;
  height: 34px;
  border-radius: 17px;
  background: rgba(255, 255, 255, 0.8);
  text-align: center;
  line-height: 34px;
  font-size: 14px;
  display: block;
  margin-top: 10px;
  color: #5a5a5a;
}
.userinfo-nickname {
  color: rgb(90,90,90);
  width: 230px;
  height: 30px;
  border-radius: 14px;
  background: rgba(255, 255, 255, 0.6);
  text-align: center;
  margin-top: 30px;

}
.usermotto {
  /* border: 1px solid blue; */
  margin-top: 200rpx;
  float: left;
}
.user-motto{
  display: inline-block;
  margin-right: 60rpx;
}
/* 设置获取按钮 */
.getUser-Info{
  width: 180px;
  height: 62px;
  line-height: 62px;
  text-align: center;
  border-radius: 79px;
  background: rgb(255,255,255);
  /* border: 5px solid rgb(52,103,225); */
  box-shadow: 5px 5px 5px rgb(52,103,225);
  font-size: 30px;
  color:rgb(90,90,90);
  margin-top: 22px;
}