/* pages/assess/assess.wxss */
.mycontainer{
  height: 850px;
  background: #EFEFEF;

}
.figureImgs{
  height: 310px;
  width: 100%;
  background: #fff;
}
.figureImgs .imgSrc{
  width:90%;
  height: 270px;
  display: inline-block;
  margin-left: 5%;

}
/* 设置身材详细信息 */
.statureInf{
  position: absolute;
  left: 17px;
  top: 293px;
  width: 340px;
  height: 170px;
  line-height: 20px;
  border-radius: 6px;
  text-align: center;
  box-shadow: 0px 4px 8px 0px rgba(170, 170, 170, 1);
  border: 1px solid rgba(187, 187, 187, 1);
  background: #fff;
}
.statureInf .infTitle{
  width: 101px;
  height: 29px;
  line-height: 29px;
  font-size: 20px;
  text-align: center;
  font-family: Arial;
  display: inline-block;
  margin-top: 20px;
}
.statureInf .infCon{
  display: inline-block;
  width: 292px;
  color: #666;
  font-size: 16px;
  text-align: left;
  font-family: Arial;
  padding-bottom: 10px;
  border-bottom: 1px solid #bbb;
}
.statureInf .suggest{
  display: inline-block;
  color: #666;
  font-size: 14px;
  width: 292px;
  font-family: Arial;
  text-align: left;
  line-height: 14px;
}
.detailedInf{
  position: absolute;
  left: 17px;
  top: 480px;
  width: 340px;
  height: 240px;
  line-height: 20px;
  font-size: 16px;
  border-radius: 6px;
  text-align: center;
  box-shadow: 2px 2px 0px 1px rgba(170, 170, 170, 1);
  background: #fff;
}
.detailedInf .detailedInfTop{
  height: 50px;
  width: 310px;
  margin: auto;
  border-bottom: 1px solid #bbb;
}
.detailedInf .detailedInfTop view{
  float: left;
  width: 155px;
  line-height: 50px;
  text-align: left;
}
/* .detailedInf .detailedInfTop view:nth-child(2):after{
  clear: both;
} */
.detailedInf .detailedInfTop view text{
  display: inline-block;
  margin-left: 10px;
}
.detailedInf .detailedInfCon{
  width: 280px;
  height: 140px;
  margin: auto;
}
.detailedInf .detailedInfCon view{

  width: 100%;
  height: 33px;
  line-height: 33px;
  vertical-align: hidden;
  position: relative;
  margin-top: 5px;
}
.detailedInf .detailedInfCon view image{
  width: 31px;
  height: 31px;
  display: inline-block;
  position: absolute;
  left: 0px;
}
.detailedInf .detailedInfCon view text{
  width: 31px;
  height: 31px;
  font-size: 16px;
}
.detailedInf .detailedInfCon view text:nth-of-type(1){
  position: absolute;
  left: 40px;
  display: inline-block;
  width: 35px;
}
.detailedInf .detailedInfCon view text:nth-of-type(2){
  position: absolute;
  right: 00px;
  display: inline-block;
  width: 55px;
  font-size: 14px;
}
.detailedInf .detailedInffooter{
  font-size: 12px;
  width: 310px;
  margin: auto;
  margin-top: 15px;
  text-align: right;
}
/* 设置去运动按钮 */
.gotoNext{
  position: absolute;
  left: 70px;
  top: 750px;
  width: 240px;
  height: 65px;
  line-height: 65px;
  border-radius: 22px;
  color: rgba(37, 155, 36, 1);
  font-size: 28px;
  text-align: center;
  box-shadow: 2px 2px 0px 0px rgba(170, 170, 170, 1);
  font-family: Microsoft Yahei;
  border: 1px solid rgba(187, 187, 187, 1);

}
